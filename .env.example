# copy this to .env and fill real values (do NOT commit .env)

# Primary Spoonacular API Key
SPOONACULAR_API_KEY=your_primary_spoonacular_api_key_here

# Additional API Keys for rotation (add as many as you have)
SPOONACULAR_API_KEY2=your_second_spoonacular_api_key_here
SPOONACULAR_API_KEY3=your_third_spoonacular_api_key_here
SPOONACULAR_API_KEY4=your_fourth_spoonacular_api_key_here

# Server Configuration
PORT=5000

# Currency Configuration
USD_TO_INR=83.5

# Optional: Database Configuration (if using)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=recipe_finder
# DB_USER=your_db_user
# DB_PASS=your_db_password

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379

# Optional: JWT Secret (for authentication)
# JWT_SECRET=your_jwt_secret_here